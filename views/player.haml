%section.player
  - in_channel ||= false

  %h1=in_channel ? "Player" : player.name
  = haml :player_state, locals: { player: player, in_player: true }
  %p
    = surround "Load state is ", "." do
      %strong= player.load_state
  - if player.load_state == :ok
    %p
      = surround "Playing ", "." do
        %strong= player.item.name

  - if in_channel
    %a.in{ href: "/bra/channels/#{player.channel_id}/player"} In
  - unless in_channel
    %a.out{ href: "/bra/channels/#{player.channel_id}"} Out
