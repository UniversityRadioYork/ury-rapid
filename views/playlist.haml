%section.channel-playlist
  - in_channel ||= false

  %h1=in_channel ? "Playlist" : playlist.name
  - unless 0 < playlist.size
    %p No items.

  - if 0 < playlist.size
    %ol.playlist-items
      - playlist.contents.each_with_index do |item, id|
        %li.item{ class: item.type }
          %span= item.name
          %a.in{ href: url("/channels/#{playlist.channel_id}/playlist/#{id}") } In

  - if in_channel
    %a.in{ href: url("/channels/#{playlist.channel_id}/playlist") } In
  - unless in_channel
    %a.out{ href: url("/channels/#{playlist.channel_id}") } Out
