%section.player-state{ class: state.value }
  - in_player ||= false

  %p
    - preamble = "Currently " if in_player
    - preamble = "#{state.player_channel_name} is currently " unless in_player
    = surround preamble, "." do
      %strong= state.value

  - if in_player
    %a.in{ href: "/bra/channels/#{state.player_channel_id}/player/state" } In
  - unless in_player
    %a.out{ href: "/bra/channels/#{state.player_channel_id}/player" } Out
