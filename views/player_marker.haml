%section.player-marker
  - in_player ||= false

  %p
    - preamble = "#{marker.short_name} is at " if in_player
    - preamble = "#{marker.player_channel_name}'s #{marker.short_name} is at " unless in_player
    = surround preamble, "msec." do
      %strong= marker.value

  - if in_player
    %a.in{ href: url(marker.url) } In
  - unless in_player
    %a.out{ href: url(marker.parent_url) } Out
